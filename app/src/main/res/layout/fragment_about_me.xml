<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:src="@drawable/stock"
            android:scaleType="centerCrop"
            android:id="@+id/imgSaya"
            android:layout_below="@id/txtAboutMe"
            android:layout_marginBottom="60dp"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Hai, nama saya Raffli Firmansyah. Saya seorang mahasiswa prodi S1 Sistem Informasi di Kampus STIMATA. Saya membuat aplikasi ini berdasarkan persyaratan sebelum melakukan UAS PPB yaitu membuat aplikasi ini sebagai tugas akhir mata kuliah PPB. Terima Kasih"
            android:layout_below="@+id/imgSaya"
            android:textStyle="italic"
            android:fontFamily="serif"
            android:textSize="13dp"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>