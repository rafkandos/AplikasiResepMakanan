<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/btnAnekaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtAnekaMenu"
            android:layout_centerHorizontal="true"
            android:background="#973737"
            android:padding="25dp"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:bottomRightRadius="30dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtAnekaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Resep Masakan"
            android:textColor="#973737"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/btnAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#973737"
            android:padding="25dp"
            android:src="@drawable/ic_baseline_people_alt_24"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAboutMe"
            android:layout_centerHorizontal="true"
            android:text="About Me"
            android:textColor="#973737"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

        <ImageButton
            android:id="@+id/btnAboutApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#973737"
            android:padding="25dp"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAboutApp"
            android:layout_centerHorizontal="true"
            android:text="About App"
            android:textColor="#973737"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>